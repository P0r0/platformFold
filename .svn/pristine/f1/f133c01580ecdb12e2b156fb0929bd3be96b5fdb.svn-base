<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yyh_corner_botton_white_bg"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >
        <RelativeLayout
            android:id="@+id/yyh_center_rl_dj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yyh_account_center_item">

            <ImageView
                android:src="@drawable/yyh_center_doujuan"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:id="@+id/imageView0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView0"
                android:layout_toLeftOf="@+id/imageView1"
                android:layout_toStartOf="@+id/imageView1">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/yyh_gray_dark"
                    android:text="@string/yyh_tv_doujuanduihuan"
                    android:layout_height="22dp"/>

                <TextView
                    android:layout_height="22dp"
                    android:textColor="@color/yyh_gray_light"
                    android:layout_width="wrap_content"
                    android:text="@string/yyh_tv_chong_doujuanduihuan"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyh_arrow_right"
                android:layout_height="30dp"
                android:id="@+id/imageView1"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/yyh_gray"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/yyh_center_rl_cz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yyh_account_center_item">

            <ImageView
                android:src="@drawable/yyh_center_chongzhi"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:id="@+id/imageView"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/yyh_gray_dark"
                    android:text="@string/yyh_tv_chongzhijilu"
                    android:layout_height="22dp"/>

                <TextView
                    android:layout_height="22dp"
                    android:textColor="@color/yyh_gray_light"
                    android:layout_width="wrap_content"
                    android:text="@string/yyh_tv_chong_yingyongdou"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyh_arrow_right"
                android:layout_height="30dp"
                android:id="@+id/imageView2"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/yyh_gray"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/yyh_center_rl_binding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yyh_account_center_item">

            <ImageView
                android:src="@drawable/yyh_center_binding"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:id="@+id/imageView4"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/yyh_center_tv_bingding_title"
                    android:textColor="@color/yyh_gray_dark"
                    android:text="@string/yyh_tv_binding"
                    android:layout_height="22dp"/>

                <TextView
                    android:id="@+id/yyh_center_tv_bingding"
                    android:layout_height="22dp"
                    android:textColor="@color/yyh_gray_light"
                    android:layout_width="wrap_content"
                    android:text="@string/yyh_tv_no_binding"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyh_arrow_right"
                android:layout_height="30dp"
                android:id="@+id/imageView3"/>
        </RelativeLayout>

        <View
            android:id="@+id/yyh_center_line_binding"
            android:layout_width="match_parent"
            android:background="@color/yyh_gray"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/yyh_center_rl_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yyh_account_center_item">

            <ImageView
                android:src="@drawable/yyh_center_pwd"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:id="@+id/imageView6"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toLeftOf="@+id/imageView5"
                android:layout_toStartOf="@+id/imageView5">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/yyh_gray_dark"
                    android:text="@string/yyh_tv_pwd"
                    android:layout_height="22dp"/>

                <TextView
                    android:layout_height="22dp"
                    android:textColor="@color/yyh_gray_light"
                    android:layout_width="wrap_content"
                    android:text="@string/yyh_tv_change_the_pwd"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyh_arrow_right"
                android:layout_height="30dp"
                android:id="@+id/imageView5"/>
        </RelativeLayout>

        <View
            android:id="@+id/yyh_center_line_pwd"
            android:layout_width="match_parent"
            android:background="@color/yyh_gray"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/yyh_center_rl_return"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yyh_account_center_item">

            <ImageView
                android:src="@drawable/yyh_center_return"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:id="@+id/imageView9"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/yyh_gray_dark"
                    android:text="@string/yyh_tv_switch_account"
                    android:layout_height="22dp"/>

                <TextView
                    android:layout_height="22dp"
                    android:textColor="@color/yyh_gray_light"
                    android:layout_width="wrap_content"
                    android:text="@string/yyh_tv_switch_content"
                    android:textSize="11sp"/>
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yyh_arrow_right"
                android:layout_height="30dp"
                android:id="@+id/imageView7"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/yyh_gray"
            android:layout_height="1px"/>


        <Button
            android:id="@+id/yyh_center_logout"
            android:layout_marginBottom="10dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/yyh_exit"
            android:background="@drawable/yyh_corner_red_bg"
            android:textColor="@color/yyh_white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_height="44dp"/>

    </LinearLayout>
</ScrollView>