    android:layout_height="fill_parent"
    android:background="@drawable/game_bg" >


    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
